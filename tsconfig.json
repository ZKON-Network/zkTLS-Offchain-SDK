{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2020",
    "module": "ESNext",
    "strictPropertyInitialization": false, // to enable generic constructors, e.g. on CircuitValue
    "moduleResolution":"Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "src/test.ts"
  ]
}

